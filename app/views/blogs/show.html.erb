<div class="span9">
	<p id="notice"><%= notice %></p>

	<p>
	  <h3><strong><%= @blog.title %></strong></h3>
	  <small>Author: <%= @blog.author %></small>
		<small>Published date: <%= @blog.published_date %></small>
	</p>


	<p class="blog_body">
	  <%= @blog.body %>
	</p>

	<%= link_to 'Edit', edit_blog_path(@blog) %> |
	<%= link_to 'Back', blogs_path %>
</div>