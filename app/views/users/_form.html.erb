<div class="span9">
  <%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username %>
      <%= f.input :email %>
      <%= f.input :dob, as: :date, start_year: Date.today.year - 80, end_year: Date.today.year - 8, order: [:day, :month, :year]  %>
      <%= f.input :gender, as: :radio_buttons, :collection => ['Male', 'Female']%>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
