
<div class="span9">
  <h2>Listing blogs</h2>

  <table class="table table-bordered">
    <caption>Table listing all the blogs</caption>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Published date</th>
        <th>Author</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.body %></td>
          <td><%= blog.published_date %></td>
          <td><%= blog.author %></td>
          <td><buttton type="button" class="btn btn-small btn-info"><%= link_to 'Show', blog %></buttton></td>
          <td><buttton type="button" class="btn btn-small"><%= link_to 'Edit', edit_blog_path(blog) %></buttton></td>
          <td><buttton type="button" class="btn btn-small btn-danger"><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></buttton></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Blog', new_blog_path %>
</div>   

